<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="author" content="Artus Kévin">

        <title>{% block title %}Stanhome{% endblock %}</title>
        {% block stylesheets %}
            {#    {% stylesheets filter='?yui_css, cssrewrite'
                    '@FimePortalBundle/Resources/public/css/*'
                %}
                        {% endstylesheets %}
        #}
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>
        {% block body %}
            <nav>
                <ul>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li><a class="navbar-brand" href="{{ path('stanhome_product_product_new') }}">Ajouter un produit</a></li>
                    {% endif %}
                    <li><a class="navbar-brand" href="{{ path('stanhome_product_product_index') }}">Liste des produits</a></li>
                    <li><a class="navbar-brand" href="{{ path('logout') }}">Déconnexion</a></li>
                </ul>
            </nav>
            {% block content %}
            {% endblock %}

        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
