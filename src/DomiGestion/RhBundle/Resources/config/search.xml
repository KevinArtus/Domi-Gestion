<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="searchProvider.class">Stanhome\PortalBundle\Search\SearchProvider</parameter>
    </parameters>

    <services>
        <service id="fime.rh.search.user_search" class="%searchProvider.class%">
            <argument type="service" id="fos_elastica.manager.orm" />
            <argument type="collection">
                <argument>nom</argument>
                <argument>prenom</argument>
            </argument>
            <argument>StanhomeRhBundle:Customer</argument>
            <argument>stanhome_rh_customer_show</argument>
            <argument>StanhomeRhBundle.customers.search_header</argument>
            <argument>glyphicon-user violetFime</argument>
            <tag name="fime_search.provider" searchName="customer"/>
        </service>
    </services>
</container>
