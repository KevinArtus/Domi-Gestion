{% extends '::base.html.twig' %}

{% block content %}
    <ol class="breadcrumb">
        <li><a href="{{ path('stanhome_portal_dashboard_index') }}">{{ 'DomiGestionPortalBundle.dashboard.page_index.dashboard'|trans }}</a></li>
        <li class="active">{{ 'DomiGestionRhBundle.customers.page_new_edit.title'|trans }}</li>
    </ol>
    <div id="fwp-content" class="col-md-12">
    <div class="row">
        <div class="col-md-4  col-md-offset-1">
            <h2>{{ 'DomiGestionRhBundle.customers.page_new_edit.title'|trans }}</h2>
        </div>
    </div>
    <div class="container panel panel-body">
        {{ form_start(form) }}
        <div class="col-md-12">
            {% include "@DomiGestionRh/Customer/add.html.twig"  with {'form': form } %}

            <div class="col-md-10 col-md-offset-1 panel panel-body panel-content panel-info">
                <div class="panel-heading">
                    <h4 class="center">{{ 'DomiGestionRhBundle.customers.page_new_edit.subtitle_hostess'|trans }}</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.anniversaire) }}</h6>
                        </div>
                        <div class="col-md-7">
                            <div class="input-group date">
                                {{ form_widget(form.anniversaire, { 'attr': { 'class' : 'form-control' }}) }}<span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.km) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.km) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.comment) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.comment) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.preference) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.preference) }}
                        </div>
                    </div>
                    <div class="col-md-11">
                        <div class="col-md-2 right">
                            {{ form_widget(form.save) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
