{% extends '::base.html.twig' %}

{% block content %}
    <ol class="breadcrumb">
        <li class="active"><a href="{{ path('stanhome_rh_customer_index') }}">{{ 'DomiGestionRhBundle.customers.page_index.header'|trans }}</a></li>
        <li class="active">{{ 'DomiGestionRhBundle.customers.page_new_edit.title'|trans }}</li>
    </ol>
    <div id="fwp-content" class="col-md-12">
    <div class="row">
        <div class="col-md-4  col-md-offset-1">
            <h2>{{ 'StanhomeProductBundle.products.page_new_edit.header'|trans }}</h2>
        </div>
    </div>
    <div class="container panel panel-body">
        {{ form_start(form, {"action": path('stanhome_rh_customer_update', {"id" : customer.id})} ) }}
        <div class="col-md-12">
            <div class="col-md-10 col-md-offset-1 panel panel-body panel-content panel-info">
                <div class="panel-heading">
                    <h4 class="center">{{ 'DomiGestionProductBundle.products.page_new_edit.subtitle_global'|trans }}</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.sexe) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.sexe) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.nom) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.nom) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.prenom) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.prenom) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.fixe) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.fixe) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.portable) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.portable) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.email) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.email) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.address) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.address) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.cp) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.cp) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.city) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.city) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="col-md-11">
                <div class="col-md-2 right">
                    <button class="btn btn-block" type="submit">{{ 'DomiGestionProductBundle.products.page_new_edit.validate'|trans }}</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
