{% extends '::base.html.twig' %}

{% block content %}
    <ol class="breadcrumb">
        <li><a href="{{ path('stanhome_portal_dashboard_index') }}">{{ 'DomiGestionPortalBundle.dashboard.page_index.dashboard'|trans }}</a></li>
    </ol>
    <div id="fwp-content" class="col-md-12">
        <h1>{{ 'DomiGestionPortalBundle.dashboard.page_index.header'|trans }}{{ salary }}â‚¬</h1>
        <div class="row">
            <div class="col-md-2  col-md-offset-1">
                <h2>{{ 'DomiGestionPortalBundle.dashboard.page_index.titleMeeting'|trans }} {{ pagination.getTotalItemCount }}</h2>
            </div>
        </div>
        <div class="container">
            {#{% if customers is empty %}#}
            {#{{ 'StanhomeProductBundle.products.page_index.noProduct'|trans }}#}
            {#{% else %}#}
            <div class="panel panel-default table-responsive">
                <table id="tableShipping" class="table table-hover table-responsive table-striped table-bordered">
                    <thead>
                    <tr>
                        <th class="col-md-2">{{ 'DomiGestionMeetingBundle.meetings.page_index.details'|trans }}</th>
                        <th class="col-md-2">{{ 'DomiGestionMeetingBundle.meetings.page_index.date'|trans }}</th>
                        <th class="col-md-2">{{ 'DomiGestionMeetingBundle.meetings.page_index.customer'|trans }}</th>
                        <th class="col-md-2">{{ 'DomiGestionMeetingBundle.meetings.page_index.address'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for meeting in pagination %}
                        <tr>
                            <td>
                                <a href="{{ path('stanhome_meeting_meeting_show', { 'id': meeting.id }) }}"> {{ 'DomiGestionMeetingBundle.meetings.page_index.details'|trans }}</a>
                            </td>
                            <td> {{ meeting.date|date("d/m/Y") }} </td>
                            <td> <a href="{{ path('stanhome_rh_customer_show', { 'id': meeting.customer.id }) }}">{{ meeting.customer.nom }} {{ meeting.customer.prenom }}</a></td>
                            <td> {{ meeting.inlineAddress }} </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
            {#{% endif %}#}
        </div>
    </div>
{% endblock %}
