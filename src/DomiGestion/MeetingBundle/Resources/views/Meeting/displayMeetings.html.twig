<div class="panel panel-default table-responsive">
    <table id="" class="tableMeetings table table-hover table-responsive table-striped table-bordered">
        <thead>
        <tr>
            <th class="col-md-2">{{ 'DomiGestionMeetingBundle.meetings.page_index.details'|trans }}</th>
            <th class="col-md-2">{{ 'DomiGestionMeetingBundle.meetings.page_index.date'|trans }}</th>
            <th class="col-md-2">{{ 'DomiGestionMeetingBundle.meetings.page_index.customer'|trans }}</th>
            <th class="col-md-2">{{ 'DomiGestionMeetingBundle.meetings.page_index.address'|trans }}</th>
            <th>{{ 'DomiGestionMeetingBundle.meetings.page_index.modify'|trans }}</th>
            <th>{{ 'DomiGestionMeetingBundle.meetings.page_index.delete'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for meeting in meetings %}
            <tr>
                <td>
                    <a href="{{ path('domiGestion_meeting_meeting_show', { 'id': meeting.id }) }}"> {{ 'DomiGestionMeetingBundle.meetings.page_index.details'|trans }}</a>
                </td>
                <td> {{ meeting.date|date("d/m/Y") }} </td>
                <td> {{ meeting.customer.nom }} {{ meeting. customer.prenom }}</td>
                <td> {{ meeting.address }} {{ meeting.cp }} {{ meeting.city }} </td>
                <input type='hidden' name='_method' value='PUT'>
                <td class="center"><a href="{{ path('domiGestion_meeting_meeting_edit', { 'id': meeting.id }) }}"><i class="icon-pencil2"></i></a></td>
                <input type='hidden' name='_method' value='DELETE'>
                <td class="center"><a href="{{ path('domiGestion_meeting_meeting_delete', { 'id': meeting.id }) }}"><i class="icon-pencil2"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
