{% extends '::base.html.twig' %}

{% block content %}
    <ol class="breadcrumb">
        <li><a href="{{ path('stanhome_portal_dashboard_index') }}">{{ 'DomiGestionPortalBundle.global.dashboard'|trans }}</a></li>
        <li class="active"><a href="{{ path('domiGestion_rh_customer_client') }}">{{ 'DomiGestionMeetingBundle.meetings.page_index.header'|trans }}</a></li>
        <li class="active">{{ 'DomiGestionMeetingBundle.meetings.page_show.title'|trans }} {{ meeting.date|date("d/m/Y") }}</li>
    </ol>
    <div id="fwp-content" class="col-md-12">
        <div class="row">
            <div class="col-md-2  col-md-offset-1">
                <h2>{{ 'DomiGestionMeetingBundle.meetings.page_show.header'|trans }}</h2>
            </div>
        </div>
        <div class="container">
            {% if meeting is empty %}
                {{ 'DomiGestionShoppingBundle.shoppings.page_index.noProduct'|trans }}
            {% else %}
                <div class="panel panel-default table-responsive">
                    <table id="tableShipping" class="table table-hover table-responsive table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>{{ 'DomiGestionMeetingBundle.meetings.page_show.customer'|trans }}</th>
                            <th>{{ 'DomiGestionMeetingBundle.meetings.page_show.date'|trans }}</th>
                            <th>{{ 'DomiGestionMeetingBundle.meetings.page_show.km'|trans }}</th>
                            <th>{{ 'DomiGestionMeetingBundle.meetings.page_show.nbPersons'|trans }}</th>
                            <th>{{ 'DomiGestionMeetingBundle.meetings.page_show.montantTtc'|trans }}</th>
                            <th>{{ 'DomiGestionMeetingBundle.meetings.page_show.montantHt'|trans }}</th>
                            <th>{{ 'DomiGestionMeetingBundle.meetings.page_show.profit'|trans }}</th>
                            <th>{{ 'DomiGestionMeetingBundle.meetings.page_show.address'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td><a href="{{ path('stanhome_rh_customer_show', { 'id': meeting.customer.id }) }}"> {{ meeting.customer.nom }} {{ meeting.customer.prenom }}</a></td>
                            <td><span class="label label-default">{{ meeting.date|date("d/m/Y") }}</span></td>
                            <td><span class="label label-default">{{ meeting.nbKm }}</span></td>
                            <td><span class="label label-default">{{ meeting.nbPersons }}</span></td>
                            <td><span class="label label-default">{{ meeting.montantTtc }} €</span></td>
                            <td><span class="label label-default">{{ meeting.montantHt }} €</span></td>
                            <td><span class="label label-default">{{ meeting.profit }} €</span></td>
                            <td><span class="label label-default">{{ meeting.inlineAddress }}</span></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
