{% extends '::base.html.twig' %}

{% block content %}
    <ol class="breadcrumb">
        <li><a href="{{ path('stanhome_portal_dashboard_index') }}">{{ 'DomiGestionPortalBundle.global.dashboard'|trans }}</a></li>
        <li class="active"><a href="{{ path('stanhome_rh_customer_index') }}">{{ 'DomiGestionMeetingBundle.meetings.page_index.header'|trans }}</a></li>
    </ol>
    <div id="fwp-content" class="col-md-12">
        <div class="row">
            <div class="col-md-2  col-md-offset-1">
                <h2>{{ 'DomiGestionMeetingBundle.meetings.page_index.header'|trans }} ({{ pagination.getTotalItemCount }})</h2>
            </div>
            {#<div class="col-md-2 right">#}
                {#<a href="{{ path('stanhome_meeting_meeting_new') }}"><i class="icon-plus left"></i><i class="icon-icon-project"></i><div>{{ 'StanhomeMeetingBundle.meetings.page_index.add'|trans }}</div></a>#}
            {#</div>#}
        </div>
        <div class="container">
            {#{% if customers is empty %}#}
            {#{{ 'StanhomeProductBundle.products.page_index.noProduct'|trans }}#}
            {#{% else %}#}
            <div class="panel panel-default table-responsive">
                <table id="tableMeetings" class="table table-hover table-responsive table-striped table-bordered">
                    <thead>
                    <tr>
                        <th class="col-md-2">{{ 'DomiGestionMeetingBundle.meetings.page_index.details'|trans }}</th>
                        <th class="col-md-2">{{ 'DomiGestionMeetingBundle.meetings.page_index.date'|trans }}</th>
                        <th class="col-md-2">{{ knp_pagination_sortable(pagination, 'DomiGestionMeetingBundle.meetings.page_index.customer'|trans, 'm.customer') }}</th>
                        <th class="col-md-2">{{ 'DomiGestionMeetingBundle.meetings.page_index.address'|trans }}</th>
                        <th>{{ 'DomiGestionMeetingBundle.meetings.page_index.modify'|trans }}</th>
                        <th>{{ 'DomiGestionMeetingBundle.meetings.page_index.delete'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for meeting in pagination %}
                        <tr>
                            <td>
                                <a href="{{ path('stanhome_meeting_meeting_show', { 'id': meeting.id }) }}"> {{ 'DomiGestionMeetingBundle.meetings.page_index.details'|trans }}</a>
                            </td>
                            <td> {{ meeting.date|date("d/m/Y") }} </td>
                            <td> {{ meeting.customer.nom }} {{ meeting. customer.prenom }}</td>
                            <td> {{ meeting.address }} {{ meeting.cp }} {{ meeting.city }} </td>
                            <input type='hidden' name='_method' value='PUT'>
                            <td class="center"><a href="{{ path('stanhome_meeting_meeting_edit', { 'id': meeting.id }) }}"><i class="icon-pencil2"></i></a></td>
                            <input type='hidden' name='_method' value='DELETE'>
                            <td class="center"><a href="{{ path('stanhome_meeting_meeting_delete', { 'id': meeting.id }) }}"><i class="icon-pencil2"></i></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {#{% endif %}#}
        </div>
    </div>
{% endblock %}

