{% extends '::base.html.twig' %}

{% block content %}
    <ol class="breadcrumb">
        <li><a href="{{ path('stanhome_portal_dashboard_index') }}">{{ 'DomiGestionPortalBundle.global.dashboard'|trans }}</a></li>
        <li class="active">{{ 'DomiGestionMeetingBundle.meetings.page_new_edit.title'|trans }}</li>
    </ol>
    <div id="fwp-content" class="col-md-12">
    <div class="row">
        <div class="col-md-4  col-md-offset-1">
            <h2>{{ 'DomiGestionMeetingBundle.meetings.page_new_edit.title'|trans }}</h2>
        </div>
    </div>
    <div class="container panel panel-body">
        {{ form_start(form) }}
        <div class="col-md-12">
            <div class="col-md-10 col-md-offset-1 panel panel-body panel-content panel-info">
                <div class="panel-heading">
                    <h4 class="center">{{ 'DomiGestionMeetingBundle.meetings.page_new_edit.subtitle_global'|trans }}</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.date) }}</h6>
                        </div>
                        <div class="col-md-7">
                            <div class="input-group date">
                                {{ form_widget(form.date, { 'attr': { 'class' : 'form-control' }}) }}<span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.hostess) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.hostess) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.address) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.address) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.cp) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.cp) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.city) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.city) }}
                        </div>
                    </div>
                    <div class="col-md-11">
                        <div class="col-md-2 right">
                            {{ form_widget(form.save) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
