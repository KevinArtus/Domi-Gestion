{% extends '::base.html.twig' %}

{% block content %}
    <ol class="breadcrumb">
        <li class="active"><a href="{{ path('stanhome_rh_customer_index') }}">{{ 'StanhomeRhBundle.customers.page_index.header'|trans }}</a></li>
        <li class="active">{{ 'StanhomeMeetingBundle.meetings.page_new_edit.title'|trans }}</li>
    </ol>
    <div id="fwp-content" class="col-md-12">
    <div class="row">
        <div class="col-md-4  col-md-offset-1">
            <h2>{{ 'StanhomeMeetingBundle.meetings.page_new_edit.title'|trans }}</h2>
        </div>
    </div>
    <div class="container panel panel-body">
        {{ form_start(form, {"action": path('stanhome_meeting_meeting_create')} ) }}
        <div class="col-md-12">
            <div class="col-md-10 col-md-offset-1 panel panel-body panel-content panel-info">
                <div class="panel-heading">
                    <h4 class="center">{{ 'StanhomeMeetingBundle.meetings.page_new_edit.subtitle_global'|trans }}</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.date) }}</h6>
                        </div>
                        <div class="col-md-7">
                            <div class="input-group date">
                                {{ form_widget(form.date, { 'attr': { 'class' : 'form-control' }}) }}<span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.customer) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.customer) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.address) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.address) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.cp) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.cp) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.city) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.city) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h6>{{ form_label(form.nbKm) }}</h6>
                        </div>
                        <div class="col-md-7">
                            {{ form_widget(form.nbKm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="col-md-11">
                <div class="col-md-2 right">
                    <button class="btn btn-block" type="submit">{{ 'StanhomeMeetingBundle.meetings.page_new_edit.validate'|trans }}</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}