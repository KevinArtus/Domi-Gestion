{% extends '::base.html.twig' %}


{% block content %}
    <ol class="breadcrumb">
        <li><a href="{{ path('stanhome_portal_dashboard_index') }}">{{ 'StanhomePortalBundle.global.dashboard'|trans }}</a></li>
        <li class="active"><a href="{{ path('stanhome_rh_customer_index') }}">{{ 'StanhomeRhBundle.customers.page_index.header'|trans }}</a></li>
        <li class="active">{{ 'StanhomeRhBundle.customers.page_show.title'|trans }}{{ customer.nom }} {{ customer.prenom }}</li>
    </ol>
    <div class="container-fluid">
        <div class="row">
            <div id="fwp-content" class="col-md-12 ">
                <div class="row">
                    <div class="col-md-2  col-md-offset-1">
                    </div>
                </div>
                <div class="container">
                    <div class="">
                        <div class="col-md-8 col-md-offset-2 container">
                            <div id="contact-card" class="col-md-12 reset">
                                <div class="col-md-12  center">
                                    <h3><span>{{ customer.prenom }}</span><span class="col-md-offset-1">{{ customer.nom|upper }}</span></h3>
                                </div>
                                <div class="panel panel-body">
                                    <div class="col-md-4 center">
                                        <h5 class="uppercase label">{{ 'StanhomeRhBundle.customers.page_show.phone'|trans }}</h5>
                                        <div>
                                            <span>{{ customer.fixe }}</span>
                                        </div>
                                    </div>
                                </div>
                                <div  class="col-md-8 col-md-offset-2 panel panel-body">
                                    <div class="col-md-4">
                                        <i class="icon-envelope "></i>
                                    </div>
                                    <div class="col-md-3">
                                        <span><a href="mailto:{{ customer.email }}">{{ customer.email }}</a></span>
                                    </div>
                                </div>
                                <div class="col-md-8 col-md-offset-2 panel panel-body">
                                    <div class="col-md-4">
                                        <i class="icon-phone"></i>
                                    </div>
                                    <div class="col-md-6">
                                        <span>{{ customer.fixe }}</span>
                                    </div>
                                </div>
                                <div class="col-md-8 col-md-offset-2 panel panel-body">
                                    <div class="col-md-4">
                                        <i class="icon-phone"></i>
                                    </div>
                                    <div class="col-md-6">
                                        <span>{{ customer.portable }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="col-md-10 col-md-offset-1 panel panel-body panel-info">
                            <div class="col-md-12 container panel-heading center">
                                {#<div class="right"><a href="{{ path('fime_rh_company_create') }}"><i class="icon-office"></i><i class="icon-plus"></i></a></div>#}
                                <h3 class="">{{ 'StanhomeRhBundle.customers.page_show.address'|trans }}</h3>
                            </div>
                            <div class="col-md-5 panel panel-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <p class="col-md-offset-1">{{ customer.address }}</p>
                                        <p class="col-md-offset-1">{{ customer.cp }}<span class="col-md-offset-1">{{ customer. city }}</span></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-7">
                                {#<iframe class="right" frameborder="0" style="border:0"#}
                                        {#src="https://www.google.com/maps/embed/v1/place?q={{ customer.inlineAddress }}key=AIzaSyCJgkR957zlNVpVXcnJTWy5k_Pt8RDtoFk"></iframe>#}
                                {#<img class="right" src="http://maps.googleapis.com/maps/api/staticmap?center={{ customer.inlineAddress }}&zoom=11&size=600x300&maptype=roadmap&markers=color:purple%7Clabel:FIME%7C{{ customer.inlineAddress }}" width="100%" height="175px" frameborder="0" style="border:0" />#}
                            </div>
                        </div>
                    </div>
                    <h3>{{ 'StanhomeRhBundle.customers.page_show.nbshopping'|trans }} {{ pagination.getTotalItemCount }}</h3>
                    <div class="container">
                        <table id="tableShipping" class="table table-hover table-responsive table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>{{ 'StanhomeRhBundle.customers.page_show.details'|trans }}</th>
                                <th>{{ 'StanhomeRhBundle.customers.page_show.date'|trans }}</th>
                                <th>{{ 'StanhomeRhBundle.customers.page_show.amount'|trans }}</th>
                                <th>{{ 'StanhomeRhBundle.customers.page_show.modify'|trans }}</th>
                                <th>{{ 'StanhomeRhBundle.customers.page_show.delete'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for shopping in pagination %}
                                <tr>
                                    <td class="center">
                                        <div class="checkbox left">
                                            <input type="checkbox" class="flat-checkbox-1 check">
                                        </div>
                                        <a href="{{ path('stanhome_shopping_shopping_show', { 'id': shopping.id }) }}">{{ shopping.id }}</a>
                                    </td>
                                    <td><span class="label label-default">{{ shopping.dateOrder.date|date("d/m/Y") }}</span></td>
                                    <td><span class="label label-default">{{ shopping.totalPrice }} €</span></td>
                                    <input type='hidden' name='_method' value='PUT'>
                                    <td class="center"><a href="{{ path('stanhome_shopping_shopping_edit', { 'id': shopping.id }) }}"><i class="icon-pencil2"></i></a></td>
                                    <input type='hidden' name='_method' value='DELETE'>
                                    <td class="center"><a href="{{ path('stanhome_shopping_shopping_delete', { 'id': shopping.id }) }}"><i class="icon-pencil2"></i></a></td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>

                    <h3>{{ 'StanhomeRhBundle.customers.page_show.nbmeeting'|trans }} {{ pagination2.getTotalItemCount }}</h3>
                    <div class="container">
                        <table id="tableShipping" class="table table-hover table-responsive table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>{{ 'StanhomeMeetingBundle.meetings.page_show.customer'|trans }}</th>
                                <th>{{ 'StanhomeMeetingBundle.meetings.page_show.date'|trans }}</th>
                                <th>{{ 'StanhomeMeetingBundle.meetings.page_show.km'|trans }}</th>
                                <th>{{ 'StanhomeMeetingBundle.meetings.page_show.nbPersons'|trans }}</th>
                                <th>{{ 'StanhomeMeetingBundle.meetings.page_show.montantTtc'|trans }}</th>
                                <th>{{ 'StanhomeMeetingBundle.meetings.page_show.montantHt'|trans }}</th>
                                <th>{{ 'StanhomeMeetingBundle.meetings.page_show.address'|trans }}</th>
                                <th>{{ 'StanhomeMeetingBundle.meetings.page_index.modify'|trans }}</th>
                                <th>{{ 'StanhomeMeetingBundle.meetings.page_index.delete'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for meeting in pagination2 %}
                                <tr>
                                    <td><span class="label label-default"> {{ meeting.customer.nom }} {{ meeting.customer.prenom }}</span></td>
                                    <td><span class="label label-default">{{ meeting.date|date("d/m/Y") }}</span></td>
                                    <td><span class="label label-default">{{ meeting.nbKm }}</span></td>
                                    <td><span class="label label-default">{{ meeting.nbPersons }}</span></td>
                                    <td><span class="label label-default">{{ meeting.montantTtc }} €</span></td>
                                    <td><span class="label label-default">{{ meeting.montantHt }} €</span></td>
                                    <td><span class="label label-default">{{ meeting.inlineAddress }}</span></td>
                                    <input type='hidden' name='_method' value='PUT'>
                                    <td class="center"><a href="{{ path('stanhome_meeting_meeting_edit', { 'id': meeting.id }) }}"><i class="icon-pencil2"></i></a></td>
                                    <input type='hidden' name='_method' value='DELETE'>
                                    <td class="center"><a href="{{ path('stanhome_meeting_meeting_delete', { 'id': meeting.id }) }}"><i class="icon-pencil2"></i></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}