{% extends '::base.html.twig' %}

{% block content %}
    <ol class="breadcrumb">
        <li><a href="{{ path('stanhome_portal_dashboard_index') }}">{{ 'StanhomePortalBundle.global.dashboard'|trans }}</a></li>
        <li class="active"><a href="{{ path('stanhome_shopping_shopping_index') }}">{{ 'StanhomeRhBundle.customers.page_index.header'|trans }}</a></li>
    </ol>
    <div id="fwp-content" class="col-md-12">
        <div class="row">
            <div class="col-md-2  col-md-offset-1">
                <h2>{{ 'StanhomeShoppingBundle.shoppings.page_show.header'|trans }}</h2>
            </div>
        </div>
        <div class="container">
            <div class="panel panel-default table-responsive">
                <table id="tableShipping" class="table table-hover table-responsive table-striped table-bordered">
                    <tbody>
                        <tr>
                            {% if entity.meeting %}
                                <th>{{ 'StanhomeShoppingBundle.shoppings.page_show.meeting'|trans }}</th>
                                <td>{{ entity.meeting }}</td>
                            {% else %}
                                <th>{{ 'StanhomeShoppingBundle.shoppings.page_show.meeting'|trans }}</th>
                                <th>{{ 'StanhomeShoppingBundle.shoppings.page_show.nomeeting'|trans }}</th>
                            {% endif %}
                        </tr>
                        <tr>
                            <th>{{ 'StanhomeShoppingBundle.shoppings.page_show.date'|trans }}</th>
                            <td>{{ entity.dateorder|date("d/m/Y") }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'StanhomeShoppingBundle.shoppings.page_show.customer'|trans }}</th>
                            <td><a href="{{ path('stanhome_rh_customer_show', { 'id': entity.customer.id }) }}">{{ entity.customer.nom }} {{ entity.customer.prenom }}</a></td>
                        </tr>
                        <tr>
                            <th>{{ 'StanhomeShoppingBundle.shoppings.page_show.price'|trans }}</th>
                            <td>{{ entity.totalPrice }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="panel panel-default table-responsive">
                <table id="tableShipping" class="table table-hover table-responsive table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>{{ 'StanhomeProductBundle.products.page_index.libelle'|trans }}</th>
                            <th>{{ 'StanhomeShoppingBundle.shoppings.page_new_edit.quantity'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for product in shoppingproducts %}
                        <tr>
                            <td><span class="label label-default">{{ product.product }}</span></td>
                            <td><span class="label label-default">{{ product.quantity }}</span></td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
{% endblock %}