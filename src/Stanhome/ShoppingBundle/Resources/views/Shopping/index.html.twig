{% extends '::base.html.twig' %}

{% block content %}
    <ol class="breadcrumb">
        <li><a href="{{ path('stanhome_portal_dashboard_index') }}">{{ 'StanhomePortalBundle.global.dashboard'|trans }}</a></li>
        <li class="active"><a href="{{ path('stanhome_shopping_shopping_index') }}">{{ 'StanhomeShoppingBundle.shoppings.page_index.header'|trans }}</a></li>
    </ol>
    <div id="fwp-content" class="col-md-12">
        <div class="row">
            <div class="col-md-2  col-md-offset-1">
                <h2>{{ 'StanhomeShoppingBundle.shoppings.page_index.header'|trans }}</h2>
            </div>
            {#<div class="col-md-2 right">#}
                {#<a href="{{ path('stanhome_product_product_new') }}"><i class="icon-plus left"></i><i class="icon-icon-project"></i><div>{{ 'StanhomeShoppingBundle.shoppings.page_index.add'|trans }}</div></a>#}
            {#</div>#}
        </div>
        <div class="container">
            {% if pagination is empty %}
                {{ 'StanhomeShoppingBundle.shoppings.page_index.noProduct'|trans }}
            {% else %}
                <div class="panel panel-default table-responsive">
                    <table id="tableShipping" class="table table-hover table-responsive table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-md-2">{{ sylius_resource_sort('name', 'StanhomeShoppingBundle.shoppings.page_index.details'|trans) }}</th>
                                <th>{{ sylius_resource_sort('type', 'StanhomeShoppingBundle.shoppings.page_index.customer'|trans) }}</th>
                                <th>{{ sylius_resource_sort('type', 'StanhomeShoppingBundle.shoppings.page_index.date'|trans) }}</th>
                                <th class="col-md-2">{{ sylius_resource_sort('end_estimated_at', 'StanhomeShoppingBundle.shoppings.page_index.amount'|trans) }}</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in pagination %}
                                <tr>
                                    <td>
                                        <a href="{{ path('stanhome_shopping_shopping_show', { 'id': entity.id }) }}">{{ 'StanhomeShoppingBundle.shoppings.page_index.details'|trans }}</a>
                                    </td>
                                    <td><a href="{{ path('stanhome_rh_customer_show', { 'id': entity.customer.id }) }}">{{ entity.customer.nom }} {{ entity.customer.prenom }}</a></td>
                                    <td><span class="label label-default">{{ entity.dateOrder|date("d/m/Y") }}</span></td>
                                    <td><span class="label label-default">{{ entity.totalPrice }} â‚¬</span></td>
                                    <input type='hidden' name='_method' value='PUT'>
                                    <td class="center"><a href="{{ path('stanhome_shopping_shopping_edit', { 'id': entity.id }) }}"><i class="icon-pencil2"></i></a></td>
                                    <input type='hidden' name='_method' value='DELETE'>
                                    <td class="center"><a href="{{ path('stanhome_shopping_shopping_delete', { 'id': entity.id }) }}"><i class="icon-pencil2"></i></a></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
