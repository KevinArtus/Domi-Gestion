{% extends '::base.html.twig' %}

{% block content %}
    <ol class="breadcrumb">
        <li><a href="{{ path('stanhome_portal_dashboard_index') }}">{{ 'StanhomePortalBundle.global.dashboard'|trans }}</a></li>
        <li class="active"><a href="{{ path('stanhome_product_brand_index') }}">{{ 'StanhomeProductBundle.brand.page_index.header'|trans }}</a></li>
    </ol>
    <div id="fwp-content" class="col-md-12">
        <div class="row">
            <div class="col-md-2  col-md-offset-1">
                <h2>{{ 'StanhomeProductBundle.brand.page_index.header'|trans }}</h2>
            </div>
            <div class="col-md-2 right">
                <a href="{{ path('stanhome_product_brand_new') }}"><i class="icon-plus left"></i><i class="icon-icon-project"></i><div>{{ 'StanhomeProductBundle.brand.page_index.add'|trans }}</div></a>
            </div>
        </div>
        <div class="container">
            {% if entities is empty %}
                {{ 'StanhomeProductBundle.products.page_index.noProduct'|trans }}
            {% else %}
                <div class="panel panel-default table-responsive">
                    <table id="tableShipping" class="table table-hover table-responsive table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="col-md-2">{{ sylius_resource_sort('name', 'StanhomeProductBundle.products.page_index.libelle'|trans) }}</th>
                                <th>{{ sylius_resource_sort('name', 'StanhomeProductBundle.products.page_index.modifier'|trans) }}</th>
                                <th>{{ sylius_resource_sort('name', 'StanhomeProductBundle.products.page_index.supprimer'|trans) }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>
                                        <a href="{{ path('stanhome_product_brand_show', { 'id': entity.id }) }}">{{ entity.libelle }}</a>
                                    </td>
                                    <input type='hidden' name='_method' value='PUT'>
                                    <td class="center"><a href="{{ path('stanhome_product_brand_edit', { 'id': entity.id }) }}"><i class="icon-pencil2"></i></a></td>
                                    <input type='hidden' name='_method' value='DELETE'>
                                    <td class="center"><a href="{{ path('stanhome_product_brand_delete', { 'id': entity.id }) }}"><i class="icon-pencil2"></i></a></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
