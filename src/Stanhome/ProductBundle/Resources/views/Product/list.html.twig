{% extends '::base.html.twig' %}

{% block content %}
    <ol class="breadcrumb">
        <li><a href="{{ path('stanhome_portal_dashboard_index') }}">{{ 'StanhomePortalBundle.global.dashboard'|trans }}</a></li>
        <li class="active"><a href="{{ path('stanhome_product_brand_index') }}">{{ 'StanhomeProductBundle.brand.page_index.header'|trans }}</a></li>
        <li class="active"><a href="{{ path('stanhome_product_brand_show', {"id" : idbrand }) }}">{{ 'StanhomeProductBundle.brand.page_show.title'|trans }}{{ brandlibelle }}</a></li>
        <li class="active">{{ 'StanhomeProductBundle.products.page_index.listTitle'|trans }} {{  catlibelle }}</li>
    </ol>
    <div id="fwp-content" class="col-md-12">
        <div class="row">
            <div class="col-sm-9 col-md-9  col-md-offset-1">
                <h1>{{ 'StanhomeProductBundle.products.page_index.listTitle'|trans }} {{  catlibelle }}</h1>
            </div>
            <div class="col-md-2 right">
                <a href="{{ path('stanhome_product_product_new') }}"><i class="icon-plus left"></i><i class="icon-icon-project"></i><div>{{ 'StanhomeProductBundle.products.page_index.add'|trans }}</div></a>
            </div>
        </div>
        <div class="container">
            {% if entity is empty %}
                {{ 'StanhomeProductBundle.products.page_index.noProduct'|trans }}
            {% else %}
                <div class="panel panel-default table-responsive">
                    <table id="tableShipping" class="table table-hover table-responsive table-striped table-bordered">
                        <thead>
                        <tr>
                            <th class="col-md-2">{{ sylius_resource_sort('name', 'StanhomeProductBundle.products.page_index.reference'|trans) }}</th>
                            <th class="col-md-2">{{ sylius_resource_sort('name', 'StanhomeProductBundle.products.page_index.libelle'|trans) }}</th>
                            <th class="col-md-2">{{ sylius_resource_sort('name', 'StanhomeProductBundle.products.page_index.price'|trans) }}</th>
                            <th>{{ sylius_resource_sort('name', 'StanhomeProductBundle.products.page_index.modifier'|trans) }}</th>
                            <th>{{ sylius_resource_sort('name', 'StanhomeProductBundle.products.page_index.supprimer'|trans) }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entities in entity %}
                            <tr>
                                <td>
                                    <div class="checkbox left">
                                        <input type="checkbox" class="flat-checkbox-1 check">
                                    </div>
                                    {{ entities.reference }}
                                </td>
                                <td>{{ entities.libelle }}</td>
                                <td>{{ entities.price }}</td>
                                <input type='hidden' name='_method' value='PUT'>
                                <td class="center"><a href="{{ path('stanhome_product_product_edit', { 'reference': entities.reference }) }}"><i class="icon-pencil2"></i></a></td>
                                <input type='hidden' name='_method' value='DELETE'>
                                <td class="center"><a href="{{ path('stanhome_product_product_delete', { 'reference': entities.reference }) }}"><i class="icon-pencil2"></i></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
        <div class="formFimeRight">
            <div>
                <a class="btn btn-default" href="{{ path('stanhome_product_brand_index') }}"><span class="glyphicon glyphicon-arrow-left"></span> {% trans %}StanhomeProductBundle.brand.page_show.back{% endtrans %}</a>
            </div>
        </div>
    </div>
{% endblock %}
