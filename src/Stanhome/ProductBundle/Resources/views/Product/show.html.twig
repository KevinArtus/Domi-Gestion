{% extends '::base.html.twig' %}

{% block content %}
    <div id="fwp-content" class="col-md-12">
        <div class="row">
            <div class="col-sm-9 col-md-9  col-md-offset-1">        <h1>{{ entity.libelle }}</h1>
                <h2>{{ entity.reference }}</h2>
            </div>
                <div class="formFimeContent">
                    <table class="table table-striped table-bordered record_properties">
                        <tbody>
                        <tr>
                            <th>{{ 'StanhomeProductBundle.products.page_show.price'|trans }}</th>
                            <td>{{ entity.price }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="formFimeRight">
                <div>
                    <a class="btn btn-default" href="{{ path('stanhome_product_product_index') }}"><span class="glyphicon glyphicon-arrow-left"></span> {% trans %}StanhomeProductBundle.products.page_show.back{% endtrans %}</a>
                </div>
                <div>
                    <form action="{{ path("stanhome_product_product_index", {"code" : entity.reference}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class=" btn btn-default"><span class="glyphicon glyphicon-remove"></span> {{ 'StanhomeProductBundle.products.page_show.delete'|trans }}</button>
                    </form>
                </div>
                <div>
                    <a class="btn btn-default" href="{{ path('stanhome_product_product_index', { 'code': entity.reference }) }}"><span class="glyphicon glyphicon-cog"></span> {{ 'StanhomeProductBundle.products.page_show.delete'|trans }}</a>
                </div>
            </div>

    <div class="clearfix"></div>
{% endblock %}